{
    "name": "ProjectSubmission",
    "type": "object",
    "properties": {
      "company_name": {
        "type": "string",
        "description": "Name of the company or individual"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Contact email"
      },
      "phone": {
        "type": "string",
        "description": "Contact phone number"
      },
      "project_title": {
        "type": "string",
        "description": "Title of the project"
      },
      "abstract": {
        "type": "string",
        "description": "Project abstract/description"
      },
      "attachment_urls": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "URLs of uploaded project documents"
      },
      "engineering_discipline": {
        "type": "string",
        "enum": [
          "Electronic",
          "Mechanical",
          "Civil",
          "Software",
          "Automation",
          "Robotics",
          "Multiple Disciplines"
        ],
        "description": "Primary engineering discipline"
      },
      "status": {
        "type": "string",
        "enum": [
          "new",
          "under_review",
          "in_progress",
          "completed",
          "archived"
        ],
        "default": "new"
      }
    },
    "required": [
      "company_name",
      "email",
      "project_title",
      "abstract"
    ]
  }