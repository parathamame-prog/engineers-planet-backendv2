{
    "name": "EngineerApplication",
    "type": "object",
    "properties": {
      "full_name": {
        "type": "string",
        "description": "Full name of the applicant"
      },
      "email": {
        "type": "string",
        "format": "email",
        "description": "Contact email"
      },
      "country_of_origin": {
        "type": "string",
        "description": "Country where the engineer is from"
      },
      "specialization": {
        "type": "string",
        "enum": [
          "Electronic",
          "Mechanical",
          "Civil",
          "Software",
          "Automation",
          "Robotics"
        ],
        "description": "Engineering specialization"
      },
      "years_experience": {
        "type": "number",
        "description": "Years of professional experience"
      },
      "cv_url": {
        "type": "string",
        "description": "URL to uploaded CV/Resume"
      },
      "linkedin_url": {
        "type": "string",
        "description": "LinkedIn profile URL"
      },
      "status": {
        "type": "string",
        "enum": [
          "pending",
          "under_review",
          "interviewed",
          "approved",
          "rejected"
        ],
        "default": "pending"
      }
    },
    "required": [
      "full_name",
      "email",
      "country_of_origin",
      "specialization"
    ]
  }